{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@@multi-venden/database": ["database/src/index.ts"],
      "@auth-service/*": ["apps/auth-service/src/*"],
      "@multi-venden/backend-utils": ["libs/backend-utils/src/index.ts"]
    }
  }
}
